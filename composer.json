    "require-dev": {
        "monolog/monolog": "1.*",
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "Collins\\": "src/"
        },
        "psr-4": {
            "Collins\\ShopApi\\Test\\Functional\\": "tests/functional/"
